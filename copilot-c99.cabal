cabal-version             : >= 1.10
name                      : copilot-c99
version                   : 0.1
synopsis                  : A compiler for CoPilot targeting C99.
description               : Blah blah blah...
license                   : BSD3
license-file              : LICENSE
maintainer                : leepike@galois.com
stability                 : Experimental
category                  : Language, Embedded
build-type                : Simple
extra-source-files        : README.md

author                    : Lee Pike
                          , Robin Morisset
                          , Alwyn Goodloe
                          , Sebastian Niller
                          , Nis Nordby Wegmann

library
  default-language        : Haskell2010
  hs-source-dirs          : src
  ghc-options             : -Wall -fwarn-tabs
  ghc-prof-options        : -auto-all -caf-all

  build-depends           : atom >= 1.0.9
                          , base >= 4.3
                          , bytestring
                          , bytestring-csv
                          , containers >= 0.4
                          , copilot-core
                          , directory >= 1.1
                          , process >= 1.0
                          , pp >= 1.0
                          , random >= 1.0
                          , text >= 0.6
                          , QuickCheck >= 2.4

  exposed-modules         : Copilot.Compile.C99
                          , Copilot.Compile.C99.C2A
                          , Copilot.Compile.C99.MetaTable
                          , Copilot.Compile.C99.Phases
                          , Copilot.Compile.C99.PreCode
                          , Copilot.Compile.C99.Queue
                          , Copilot.Compile.C99.Test
                          , Copilot.Compile.C99.Witness

  other-modules           : Copilot.Compile.C99.Test.CheckSpec
                          , Copilot.Compile.C99.Test.Driver
                          , Copilot.Compile.C99.Test.Iteration
                          , Copilot.Compile.C99.Test.ReadCSV

executable CopilotC99Test
  default-language        : Haskell2010
  hs-source-dirs          : test
  ghc-options             : -Wall -fwarn-tabs
  main-is                 : CopilotC99Test.hs

  build-depends           : base >= 4.3
                          , copilot-c99
                          , copilot-core
                          , copilot-language
                          , random >= 1.0
