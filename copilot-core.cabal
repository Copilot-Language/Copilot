cabal-version:       >=1.10
name:                copilot-core
version:             0.1
synopsis:            An intermediate representation for Copilot.
description:
  Intermediate representation for Copilot. Strictly follows Haskell 2010 except
  for universal and existential quantification.
author:
  Lee Pike, Robin Morisset, Alwyn Goodloe, Sebastian Niller, Nis Nordby Wegmann
license:             BSD3
license-file:        LICENSE
maintainer:          niswegmann@gmail.com
stability:           Experimental
category:            Language, Embedded
build-type:          Simple

library
  default-language: Haskell2010

  hs-source-dirs: src

  build-depends:
    haskell2010,
    pretty >= 1.0,
    pretty-ncols >= 0.1

  exposed-modules:
    Copilot.Core
    Copilot.Core.Type
    Copilot.Core.Type.Dynamic
    Copilot.Core.Type.Equality
    Copilot.Core.Interpret
    Copilot.Core.PrettyPrint
    Copilot.Core.Saturable
    Copilot.Core.Tuple
    Copilot.Core.Uninitializable

  other-modules:

  ghc-options:
    -fwarn-tabs
    -O2
    -auto-all
    -caf-all
    -Wall
