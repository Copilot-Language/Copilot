cabal-version:       >=1.10
name:                copilot-core
version:             0.1
synopsis:            An intermediate representation for CoPilot.
description:         An intermediate representation for CoPilot which uses strict Haskell2010,
                     except for existentially and universally quantified types.
license:             BSD3
license-file:        LICENSE
author:              Lee Pike, Robin Morisset, Alwyn Goodloe, Sebastian Niller, Nis Nordby Wegmann
maintainer:          niswegmann@gmail.com
stability:           Experimental
category:            Language, Embedded
build-type:          Simple

library
  default-language: Haskell2010

  hs-source-dirs: src

  build-depends:
    containers,
    haskell2010

  exposed-modules:
    Language.Copilot.Core
    Language.Copilot.Core.Type
    Language.Copilot.Core.Type.Equality
    Language.Copilot.Core.Dynamic
    Language.Copilot.Core.Dynamic.Map
    Language.Copilot.Core.HeteroMap
    Language.Copilot.Core.Interpret
    Language.Copilot.Core.PrettyPrint

  other-modules:
    Language.Copilot.Core.PrettyPrint.HughesPJ

  ghc-options:
    -fwarn-tabs
    -O2
    -auto-all
    -caf-all
    -Wall
